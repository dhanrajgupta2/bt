pragma solidity ^0.8.0;

/*
 Exp 4 : Write a program in solidity to create Student data. 
 Use the following constructs:
 - Structures
 - Arrays
 - Fallback
 Deploy this as smart contract on Ethereum and Observe 
 the transaction fee and Gas values.
*/

contract StudentData {
    struct Student {
        string name;
        uint age;
    }

    Student[] public students;

    // Add student to array
    function addStudent(string memory _name, uint _age) public {
        students.push(Student(_name, _age));
    }

    // Special function to receive ETH
    receive() external payable {
        // This will be called on plain ETH transfers
    }

    // Fallback function (for unmatched calls or when no data is sent)
    fallback() external payable {
        // Can also receive Ether if called incorrectly
    }
}
